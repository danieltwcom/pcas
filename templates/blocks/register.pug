extends ../layout

append scripts
    script(src='/scripts/register.js')

block content
    .card.w-75.mx-auto
        .card-body
            form#register_from.d-flex.justify-content-between.flex-wrap(action='', method='post')
                .form-group.w-49
                    label(for='username') Username:
                    input.form-control(type='text', name='username' )
                .form-group.w-49
                    label(for='who-are-you') Who Are You:
                    select.form-control(name='who-are-you')
                        option(value='coordinator') Coordinator
                        option(value='interpreter') Interpreter/Transcriber
                .form-group.w-49
                    label(for='first-name') First Name:
                    input.form-control(type='text', name='first_name')
                .form-group.w-49
                    label(for='last-name') Last Name:
                    input.form-control(type='text', name='last_name')
                .form-group.w-49
                    label(for='email') Email:
                    input.form-control(type='email', name='email')
                .form-group.w-49
                    label(for='confirm-email') Confirm Email:
                    input.form-control(type='email', name='confirm_email')
                .form-group.w-49
                    label(for='password') Password:
                    input.form-control(type='password', name='password')
                .form-group.w-49
                    label(for='confirm-password') Confirm Password:
                    input.form-control(type='password', name='confirm_password')
                .form-group.w-33
                    label(for='School') School:
                    select.form-control(name='school')
                        option(value='uvic') University of Victoria
                        option(value='sfu') Simon Fraser University
                        option(value='ubc') University of British Columbia
                        option(value='langara') Langara College
                        option(value='bcit') BCIT
                .form-group.w-33
                    label(for='phone') Primary Phone #:
                    input.form-control(type='text', name='phone')
                .form-group.w-33
                    label(for='other-phone') Alt Phone #:
                    input.form-control(type='text', name='other-phone')
                .form-group.w-100
                    label(for='description') Description:
                    textarea.form-control.w-100(name='description', rows='10', placeholder='Education, work experience, skills, etc.')
                .text-right.w-100
                    input.btn.btn-primary.mr-1(type='submit', value='Register')
                    input.btn.btn-secondary(type='reset', value='Clear')
            button#Submit.btn.btn-primary.mr-1.w-100 Register