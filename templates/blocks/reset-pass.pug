extends ../layout

append scripts
    script(src='/scripts/reset-pass.js')

block content
    .card.w-25.mx-auto
        .card-body
            if message
                .alert.alert-danger #{message}
            form(action='/resetPass', method='post')
                .form-group
                    label(for='newpass') Enter your new password:
                    input#password.form-control(type='password', name='password')
                .form-group
                    label(for='re-password') Re-enter your password:
                    input#repassword.form-control(type='password', name='rePassword')
                   
                .form-group.d-flex.justify-content-end
                    input.btn.btn-primary.mr-1(type='submit', value='Submit')
                    