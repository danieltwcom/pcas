nav.navbar.navbar-light.bg-light.mb-3
    if user
        include dropdown
    .mx-auto.d-flex.align-items-center
        a.w-10(href='/')
            img.w-100(src='/image/bcit.svg')
        h3 Post-Secondary Communications Access Services
    if user
        .d-flex.justify-content-end.w-15
            #profile-pic-div-mini.mr-2(style='background: url("' + user.avatar_url + '") no-repeat; background-size: cover')
            div
                .mb-2.pb-2.border-bottom
                    a(href='/profile?user_id=' + user.user_id) #{user.first_name} #{user.last_name}
                    //-span.badge.badge-primary.ml-1#user-panel-upvotes
                .d-flex.align-items-center
                    a(href='/inbox')
                        i.fa.fa-envelope(aria-hidden='true')
                    span.badge.badge-success.ml-1#message-notification